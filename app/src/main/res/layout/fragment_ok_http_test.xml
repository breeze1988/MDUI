<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="mduicom.breeze.mdui.fragment.OkHttpTestFragment">

    <Button
        android:id="@+id/btn_okHttpGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/okHttp_get"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tx_okHttpGetResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/okHttp_response"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_okHttpPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/okHttp_post"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tx_okHttpPosteResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/okHttp_response"
        android:layout_margin="10dp"
        />


</LinearLayout>
