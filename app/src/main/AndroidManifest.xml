<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mduicom.breeze.mdui">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CoordinatorLayoutDemoActivity"
            android:theme="@style/CoordinatorLayoutTheme" />
        <activity
            android:name=".activity.CoordinatorLayoutListActivity"
            android:label="@string/title_activity_coordinator_layout_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SimpleCoordinatorActivity"
            android:label="@string/title_activity_simple_coordinator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.IOActivityExample"
            android:label="@string/title_activity_ioactivity_example"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FlexibleSpaceExampleActivity"
            android:label="@string/title_activity_flexible_space_example"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RxAndroidActivity"
            android:label="@string/title_activity_rx_android"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
